---
import BlogLayout from './BlogLayout.astro'

const { frontmatter } = Astro.props;
---
<BlogLayout title={frontmatter.title}>
  <a href="/blog">‚Üê Voltar pro blog</a>

  <article>
    <div id="post-head">
      <h1 id="title">{frontmatter.title}</h1>
      { frontmatter.description && <p id="description">{frontmatter.description}</p> }
      <time>{
        new Date(frontmatter.date)
          .toLocaleString('pt-BR', {
            day: '2-digit',
            month: 'long',
            year: 'numeric',
            timeZone: 'UTC'
          }
        )}
      </time>
    </div>

    <div id="post-body">
      <slot />
    </div>
  </article>
</BlogLayout>

<style>
  article {
    padding-top: 20px;

    * {
      color: white;
    }

    h2,
    h3 {
      font-weight: 700;
      line-height: 1.1;
      padding: 24px 0 16px 0;
    }

    h2 {
      font-size: 2rem;
    }

    h3 {
      font-size: 1.4rem;
    }

    table,
    td,
    th {
      border: 2px solid #444a53;
      padding: 6px 13px 6px 6px;
    }

    tr:nth-child(even) {
      background-color: #2f3640;
    }

    thead {
      font-weight: 700;
    }

    .astro-code {
      padding: 20px;
      font-weight: 700;
    }

    code:not(.astro-code code) {
      background-color: #2f3640;
      padding: 3px;
      border-radius: 6%;
      font-weight: 700;
    }

    ul {
      padding-left: 24px;
      list-style: disc;
    }

    ol {
      padding-left: 24px;
      list-style: decimal;
    }

    em {
      font-style: italic;
    }

    strong {
      font-weight: 700;
    }

    a {
      color: #428cea;
    }

    blockquote {
      border-left: 0.25em solid #adbac7;

      padding: 0 1em 0 1em;
      p {
        color: #adbac7;
      }
    }

    pre {
      white-space: pre-wrap;
      word-wrap: break-word;
    }

    img {
      width: auto;
      height: auto;
      max-width: 100%;
    }
  }

  div#post-head {
    padding-bottom: 1rem;
    border-bottom: 0.1rem solid #ffffff;
  }

  h1#title {
    font-size: 3rem;
  }

  p#description {
    font-size: 1.2rem;
    padding: 0.2em 0 0.5em 0;
    color: white;
  }

  time {
    font-size: 0.8rem;
    color: #adbac7;
  }

  div#post-body {
    font-weight: 300;
    line-height: 1.25rem;
    padding-top: 20px;
    padding-bottom: 40px;
  }
</style>
